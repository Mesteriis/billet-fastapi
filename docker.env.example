# =============================================================================
# Переменные окружения для Docker Compose
# Скопируйте в .env и измените значения для вашего окружения
# =============================================================================

# =============================================================================
# Основные настройки
# =============================================================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-super-secret-key-in-production-environment

# =============================================================================
# База данных PostgreSQL
# =============================================================================
POSTGRES_PASSWORD=secure_postgres_password_change_me
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=mango_msg

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=
REDIS_PORT=6379

# =============================================================================
# RabbitMQ
# =============================================================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# Приложение
# =============================================================================
APP_PORT=8000

# =============================================================================
# Компоненты (включение/отключение)
# =============================================================================
WEBSOCKET_ENABLED=true
SSE_ENABLED=true
TELEGRAM_BOTS_ENABLED=false
TRACING_ENABLED=true

# =============================================================================
# CORS настройки
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# =============================================================================
# Telegram боты (опционально)
# =============================================================================
TELEGRAM_BOT_MAIN_TOKEN=
TELEGRAM_ADMIN_USERS=

# =============================================================================
# Примеры для разных окружений
# =============================================================================

# Для локальной разработки:
# ENVIRONMENT=development
# DEBUG=true
# POSTGRES_PASSWORD=dev123
# REDIS_PASSWORD=
# RABBITMQ_PASSWORD=dev123
# TRACING_ENABLED=false
# TELEGRAM_BOTS_ENABLED=false

# Для staging:
# ENVIRONMENT=staging
# DEBUG=false
# SECRET_KEY=staging-secret-key-here
# POSTGRES_PASSWORD=staging-secure-password
# REDIS_PASSWORD=staging-redis-password
# RABBITMQ_PASSWORD=staging-rabbit-password
# CORS_ORIGINS=https://staging.yourdomain.com

# Для production:
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=production-super-secure-key-very-long
# POSTGRES_PASSWORD=production-very-secure-password
# REDIS_PASSWORD=production-redis-secure-password
# RABBITMQ_PASSWORD=production-rabbit-secure-password
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com 