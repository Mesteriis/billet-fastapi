# –ê–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫–∞ env —Ñ–∞–π–ª–æ–≤ –µ—Å–ª–∏ –æ–Ω–∏ —Å—É—â–µ—Å—Ç–≤—É—é—Ç
ifneq (,$(wildcard .env))
    include .env
    export $(shell sed 's/=.*//' .env)
endif
ifneq (,$(wildcard local.env))
    include local.env  
    export $(shell sed 's/=.*//' local.env)
endif
ifneq (,$(wildcard docker.env))
    include docker.env
    export $(shell sed 's/=.*//' docker.env)
endif

