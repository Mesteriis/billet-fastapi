# WebSocket и SSE настройки

# Включение/отключение компонентов
WEBSOCKET_ENABLED=true
SSE_ENABLED=true
WEBSOCKET_AUTH_REQUIRED=false
SSE_AUTH_REQUIRED=false

# Настройки WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_MESSAGE_QUEUE_SIZE=100
WEBSOCKET_DISCONNECT_TIMEOUT=60

# Настройки SSE
SSE_HEARTBEAT_INTERVAL=30
SSE_MAX_CONNECTIONS=500
SSE_RETRY_TIMEOUT=3000
SSE_MAX_MESSAGE_SIZE=1048576

# Настройки авторизации
WS_JWT_SECRET_KEY=your-websocket-secret-key-here
WS_JWT_ALGORITHM=HS256
WS_JWT_EXPIRE_MINUTES=60
WS_API_KEY_HEADER=X-API-Key
WS_API_KEYS=api-key-1,api-key-2,api-key-3

# Примеры использования:
# WEBSOCKET_AUTH_REQUIRED=true - включить авторизацию для WebSocket
# SSE_AUTH_REQUIRED=true - включить авторизацию для SSE
# WS_API_KEYS=secret123,admin456 - список разрешенных API ключей
